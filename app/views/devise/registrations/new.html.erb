<h2 class="text-center my-4">Cadastro</h2> <%# TÃ­tulo traduzido para "Cadastro" %>

<div class="container d-flex justify-content-center">
  <div class="card p-4 shadow-sm" style="max-width: 400px; width: 100%;">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
      <div class="mb-3">
        <%# Label serÃ¡ gerado automaticamente com base no locale %>
        <%= f.input :name, input_html: { class: "form-control", autofocus: true, required: true } %>
      </div>

      <div class="mb-3">
        <%= f.input :email, input_html: { class: "form-control", autocomplete: "email", required: true } %>
      </div>

      <div class="mb-3">
        <%= f.input :password, input_html: { class: "form-control", autocomplete: "new-password", required: true }, hint: @minimum_password_length ? "(#{@minimum_password_length} caracteres no mÃ­nimo)" : nil %>
      </div>

      <div class="mb-3">
        <%= f.input :password_confirmation, input_html: { class: "form-control", autocomplete: "new-password", required: true } %>
      </div>

      <div class="d-grid">
        <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %> <%# Links adicionais do Devise %>
    </div>
  </div>
</div>
