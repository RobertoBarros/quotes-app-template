<%# Este partial exibe mensagens de flash (alert e notice) com estilos do Bootstrap %>

<% flash.each do |key, message| %>
  <%# Mapeia as chaves do flash para as classes do Bootstrap %>
  <% bootstrap_class = case key.to_sym
       when :notice then 'alert-success'
       when :alert then 'alert-danger'
       else 'alert-primary'
     end %>

  <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
    <div class="alert <%= bootstrap_class %> alert-dismissible fade show d-inline-block" role="alert">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
